{
  "name": "@stitches/react",
  "version": "0.0.1",
  "description": "The modern CSS-in-JS library",
  "main": "dist/react.cjs.js",
  "module": "dist/react.esm.js",
  "contributors": [
    "Christian Alfoni <christianalfoni@gmail.com>",
    "Pedro Duarte <pedro@modulz.app>",
    "Abdulhadi Alhallak <abdulhadi@modulz.app>"
  ],
  "preconstruct": {
    "source": "src/index.tsx"
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "./**/*.{css,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "MIT",
  "repository": "git+https://github.com/modulz/stitches.git",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "tslint --project tsconfig.json --format stylish",
    "format": "prettier '**/*.{md,js,jsx,json,ts,tsx}' --write",
    "test": "jest --env=jsdom --coverage",
    "test:watch": "node ../../node_modules/jest/bin/jest.js --env=jsdom --watch --updateSnapshot",
    "posttest": "npm run typecheck && npm run lint",
    "preversion": "npm test",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "typescript",
    "css-in-js",
    "css",
    "library"
  ],
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "dependencies": {
    "@stitches/core": "^0.0.1",
    "@types/node": "^13.11.1",
    "@types/react-test-renderer": "^16.9.3",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "react-test-renderer": "^16.13.1"
  },
  "gitHead": "01e369aa687777e751cb32633010a881071cb6e5"
}
