{
  "$schema": "./.vscode/package.schema.json",
  "name": "stitches",
  "license": "MIT",
  "scripts": {
    "build": "preconstruct build",
    "build:watch": "preconstruct watch",
    "bootstrap": "lerna bootstrap --use-workspaces && preconstruct dev",
    "postinstall": "lerna bootstrap --use-workspaces && preconstruct dev",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@babel/preset-typescript": "7.12.7",
    "@preconstruct/cli": "2.0.1",
    "@types/jest": "26.0.19",
    "@types/react-test-renderer": "17.0.0",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "microbundle": "0.12.4",
    "react-test-renderer": "17.0.1",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ]
  },
  "browserslist": [
    "last 1 chrome versions",
    "last 1 firefox versions",
    "last 1 safari versions",
    "maintained node versions"
  ],
  "jest": {
    "coverageProvider": "v8",
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "preconstruct": {
    "entrypoints": [
      "packages/*/src/index.ts"
    ],
    "packages": [
      "packages/*"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": true,
    "overrides": [
      {
        "files": "*.{json,md,yml}",
        "options": {
          "useTabs": false
        }
      }
    ]
  },
  "private": true
}
