{
  "$schema": "./.vscode/package.schema.json",
  "name": "stitches",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces && preconstruct dev",
    "build:watch": "preconstruct watch",
    "build": "preconstruct build",
    "postinstall": "run-s bootstrap",
    "start": "run-p start:*",
    "start:code": "preconstruct watch",
    "start:play": "run-s start:play:*",
    "start:play:install": "yarn --cwd play",
    "start:play:dev": "yarn --cwd play start",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "workspaces": [
    "packages/*",
    "play"
  ],
  "dependencies": {
    "@babel/preset-react": "7.12.10",
    "@babel/preset-typescript": "7.12.7",
    "@preconstruct/cli": "2.0.1",
    "@types/jest": "26.0.19",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-test-renderer": "17.0.0",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "microbundle": "0.12.4",
    "npm-run-all": "4.1.5",
    "react-test-renderer": "17.0.1",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3"
  },
  "browserslist": [
    "last 1 chrome versions",
    "last 1 firefox versions",
    "last 1 safari versions",
    "maintained node versions"
  ],
  "jest": {
    "coverageProvider": "v8",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testRegex": "(\\.|/)test\\.tsx?$"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": true,
    "overrides": [
      {
        "files": "*.{json,md,yml}",
        "options": {
          "useTabs": false
        }
      }
    ]
  },
  "private": true
}
