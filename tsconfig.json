{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "paths": {
      "@stitches/*": [
        "packages/*"
      ]
    },
    "preserveSymlinks:": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": [
      "./node_modules/@types",
      "./packages/types"
    ]
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
